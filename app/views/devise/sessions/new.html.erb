<% content_for(:body_class, "login-form-page") %>
<div id="container-fluid">
  <div class="login-form">
    <div class="logo-area">
      <div id="logo"> </div>
    </div>
    <h5>Login to your Growth Valley account</h5>
    <%= simple_form_for(resource, url: user_session_path, method: :post, role: 'form') do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control', required: true %>
    </div>
    <div class="form-group">
     <%= f.password_field :password, placeholder: 'password', class: 'form-control', required: true %>
   </div>
   <%= submit_tag 'login', value: 'LOGIN', class: '"btn btn-default form-btn' %>
   <% end %>
 </div>
</div>
