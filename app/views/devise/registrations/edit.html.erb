<% content_for(:body_class, 'profile-page') %>
<% content_for(:current, "personal") %>
<!--Start Main Content Area-->
<div class="main-content-area wrapper">
	<!--Start Personal Page Area-->
	<div class="personal-setting-form">

		<div class="row-fluid">

			<div class="span3">
				<%= image_tag("no-thumbnail-large.jpg") %>
				<input type="file" id="upload-your-profile-pic" value="">
				<label for="upload-your-profile-pic">Upload Your Profile Pic</label>
			</div>

			<div class="span9 fr">

				<form role="form">
					<div class="row-fluid">

						<div class="span6">
							<div class="form-group fr">
								<input type="email" class="form-control" placeholder="Your Full Name">
							</div>
						</div>

						<div class="span6">
							<div class="form-group fr">
								<input type="email" class="form-control" placeholder="Your Email">
							</div>
						</div>

					</div>

					<div class="row-fluid">

						<div class="span6">
							<div class="form-group fr">
								<select>
									<option>Choose Your Gender</option>
									<option>Male</option>
									<option>Female</option>
								</select>
							</div>
						</div>
						
					</div>

					<div class="row-fluid">

						<div class="span6">
							<div class="form-group fr">
								<input type="password" class="form-control" placeholder="New Password">
							</div>
						</div>

						<div class="span6">
							<div class="form-group fr">
								<input type="password" class="form-control" placeholder="New Password Confirmation">
							</div>
						</div>

					</div>

					<div class="row-fluid description-field">
						<textarea placeholder="You can write some description here"></textarea>
					</div>

					<div class="row-fluid">

						<div class="span12">
							<div class="form-group current-password-field">
								<label for="current-password">We need your current password to confirm your changes.</label>
								<input type="password" class="form-control" placeholder="Your Current Password" id="current-password">
							</div>
						</div>

					</div>

					<div class="update-button"><button type="submit" class="btn btn-default">Update</button></div>

				</form>
			</div>

		</div>

	</div>
	<!--End Personal Page Area-->
</div>
<!--End Main Content Area-->
<% if false %>
<%= render :partial => "layouts/inner_nav", :locals => { :current => "user" } %>

<h1>Edit <%= resource_name.to_s.humanize %></h1>
</br>

<div class="tab-content">
  <div id='personal' class='tab-pane fade active in'>
    <%= render 'personal' %>
  </div>
</div>
<% end %>
