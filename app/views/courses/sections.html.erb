<%= simple_form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <%= f.simple_fields_for :sections do |s| %>
    <% @course.sections_count.times do %>
      <%= s.input :attachment, required: true %>
      <%= s.input :title, required: true %>
      <%= s.input :description %>
    <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, 'Continue', :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), courses_path, :class => 'btn' %>
  </div>
<% end %>
