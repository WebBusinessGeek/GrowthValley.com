<%= simple_form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :is_paid, label: 'Is it a paid course', as: :radio_buttons if current_user.subscription_type.downcase == 'paid' %>

  <div class="form-actions">
    <%= f.button :submit, 'Continue', :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), courses_path, :class => 'btn' %>
  </div>
<% end %>
