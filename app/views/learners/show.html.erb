<div class='row-fluid'>
  <div class='span12'>
    <div class='row-fluid'>
      <div class='span2'>
        <%= image_tag(@course.course_cover_pic.url) %>
      </div>
      <div class='span8 offset2'>
        <div class='row-fluid'>
          <div class='span12'>
            <%= raw("<strong>#{@course.title.titleize}</strong>") %>
          </div>
        </div>
        <div class='row-fluid'>
          <div class='span12'>
            <%= raw(@course.description) %>
          </div>
        </div>
        <div class='row-fluid'>
          <div class='span12'>
            <%= link_to 'Subscribe', subscribe_course_learner_path(@course), class: 'btn' unless current_user.courses.include?(@course) %>
          </div>
        </div>
      </div>
    </div>
    </br>
    <% if current_user.courses.include?(@course) %>
      <div class='row-fluid'>
        <div class='span12'>
          <h3>Sections:</h3>
        </div>
      </div>
      </br>
      <% @course.sections.each do |section| %>
        <div class='row-fluid'>
          <div class='span12'>
            <%= raw("<strong>#{section.title.titleize}</strong>") %>
            <%= link_to "View/Hide", "javascript:void(0);", onClick: "javascript:$(this).parent().find('iframe').toggle()" %>
            <%= link_to "Download", section.attachment.url, target: '_blank' %>
            </br>
            <iframe src="<%= request.protocol %><%= request.host_with_port %><%= section.attachment.url %>" width="100%" height="800" frameborder="0" style='display:none;'>
              <p>Your browser does not support iframes.</p>
            </iframe>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
