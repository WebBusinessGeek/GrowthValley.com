<% content_for(:body_class, 'profile-page') %>
<% content_for(:current, 'my_courses') %>
<% content_for(:title, 'GrowthValley > My Courses > Courses') %>
<%- model_class = Exam -%>
<div class="main-content-area my-courses-table">
  <div class="wrapper">
     <div class="mycourses-all">
    <ul class="breadcrumb">
    <li><a href="javascript:void(0)">Courses</a> <span class="divider"></span></li>
  <li><a href="javascript:void(0)">Manage Exams</a></li>
    </ul>
    </div>
    </div>
<div class="table-responsive">
 <table id="courses_manageExams" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <% if @exam.present? %>
    <tbody>
      <tr>
        <td><%= link_to @exam.title, course_exam_path(@course, @exam) %> 
         <%= link_to edit_course_exam_path(@course, @exam) do %>
    <span class="pencil-icon"><img src="/assets/pencil-icon.png" alt=""></span>
     <% end %>
        </td>
       
        <td><%= @exam.course.title %></td>
        <td>
          <%= link_to 'Manage Exam Questions', course_exam_exam_questions_path(@course, @exam) %>
        </td>
        <td>
          <%= link_to t('.new', :default => t("helpers.links.add_question")), new_course_exam_exam_question_path(@course, @exam) %>
          </td>
          <td>
           <%= link_to t('.destroy', :default => t("helpers.links.destroy")), course_exam_path(@course, @exam), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, style: 'margin-left: 5px;' %>
        </td>
      </tr>
    </tbody>
    <% else %>
         <tbody>
      <tr>
        <td></td>       
        <td></td>
        <td>No Exams</td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  <% end %>
</table>
<p class="back-course-btn">
<%= link_to t('.new', :default => "New Exam"), new_course_exam_path(@course) , class: 'btn btn-green'  unless @exam.present? %>
<%= link_to t('.back', :default => 'Back to my courses'), my_courses_courses_path, class: 'btn btn-green' %>
</p> 

</div>
</div>