<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:option_1) %></th>
      <th><%= model_class.human_attribute_name(:option_2) %></th>
      <th><%= model_class.human_attribute_name(:option_3) %></th>
      <th><%= model_class.human_attribute_name(:option_4) %></th>
      <th><%= model_class.human_attribute_name(:correct_answer) %></th>
      <th><%= model_class.human_attribute_name(:question_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.id, section_question_answer_path(@section, @question, answer) %></td>
        <td><%= answer.option_1 %></td>
        <td><%= answer.option_2 %></td>
        <td><%= answer.option_3 %></td>
        <td><%= answer.option_4 %></td>
        <td><%= answer.correct_option %></td>
        <td><%= answer.question_id %></td>
        <td><%=l answer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_section_question_answer_path(@section, @question, answer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), section_question_answer_path(@section, @question, answer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_section_question_answer_path(@section, @question), :class => 'btn btn-primary' %>
<%= link_to t('.back', :default => 'Back to manage questions'), section_questions_path(@section), :class => 'btn' %>
<%= link_to t('.back', :default => 'Back to course overview'), course_path(@section.course), :class => 'btn' %>
