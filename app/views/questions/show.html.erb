<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:section_id) %>:</strong></dt>
  <dd><%= @question.section_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answers) %>:</strong><dt>
  <dd><%= link_to 'Manage Answers', section_question_answers_path(@section, @question) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), section_questions_path(@section), :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_section_question_path(@section, @question), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), section_question_path(@section, @question), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>
