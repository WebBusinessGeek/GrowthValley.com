<%= simple_form_for @bundle, html: {multipart: true } do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :price %>
  <% if !@bundle.new_record? && @bundle.bundle_pic_url.present? %>
    <%= f.input :bundle_pic, required: false %>
    <div class="control-group file optional existing_bundle_bundle_pic">
      <label class="file optional control-label">
        Existing bundle pic
      </label>
      <div class="controls">
        <%= image_tag(@bundle.bundle_pic_url(:thumb), class: 'img-rounded') %>
      </div>
    </div>
  <% else %>
    <%= f.input :bundle_pic, required: true %>
  <% end %>
  <%= f.association :courses, :collection => current_user.courses.all_published, as: :check_boxes %>
    <%= f.button :submit, 'Submit', class: 'btn btn-primary', data: {dismiss: "modal"} %>
<% end %>
