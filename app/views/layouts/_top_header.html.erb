<div class="wrapper">
  <div class="top-header">
    <div class="fleft"> <span class="discover sprite fleft">
      <select name="">
        <option selected="selected">Discover</option>
      </select>
      </span> <span class="topsearch-bar sprite fleft">
      <%= form_tag(courses_path, :method=>"get") do %>
      <input name="search" id="Search" type="text" maxlength="100" value="<%=(params[:search].present?) ? params[:search] : 'search'%>" onfocus="if (this.value=='Search') this.value = ''" onblur="if (this.value=='') this.value = 'Search'" />
      <input name="submit" type="submit" value="" class="sprite" />
      <% end %>
      </span>
    </div>
    <div class="fright"> <span class="language sprite fright">
      <select name="">
        <option selected="selected">English</option>
      </select>
      </span>
      <ul class="top-menu">
        <% if current_user %>
		  <% if current_user.type == "Learner" %>
          <li>
            <%= link_to "Dashboard", dashboard_path %>
          </li>
          <% end %>
          <li>
            <%= link_to "Profile", edit_user_registration_path %>
          </li>
          <li>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li><a href="javascript:void(0);">Teach Online</a></li>
          <li>
            <%= link_to "Login", (params[:controller] == "homes" and params[:action] == "index") ? "javascript:login();" : root_path+"?login=1" %>
          </li>
          <li>
            <%= link_to "Signup", (params[:controller] == "homes" and params[:action] == "index") ? "javascript:signup();" : root_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
