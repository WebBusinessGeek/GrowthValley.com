<meta name="twitter:card" content="summary">
<% if Settings.blog.twitter_username %>
  <meta name="twitter:site" content="<%= Settings.blog.twitter_username %>">
<% end %>
<meta name="twitter:url" content="<%= request.protocol %><%= request.host_with_port %><%= request.path.gsub("//","/") %>">
<meta name="twitter:title" content="<%= blog_accurate_title %>">
<meta name="twitter:description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : Settings.blog.meta_description  %>">