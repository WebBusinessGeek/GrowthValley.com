<meta property="og:title" content="<%= blog_accurate_title %>"/>
<meta property="og:type" content="<%= controller.action_name == "show" ? "article" : "blog" %>"/>
<meta property="og:url" content="<%= request.protocol %><%= request.host_with_port %><%= request.path.gsub("//","/") %>"/>
<meta property="og:site_name" content="<%= Settings.blog.site_name %>"/>
<% if Settings.blog.facebook_logo%>
   <meta property="og:image" content="<%= absolute_image_url(image_path(Settings.blog.facebook_logo)) %>" />
<% end  %>