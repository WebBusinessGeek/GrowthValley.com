<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "blog/admin/application" %>
  <%= javascript_include_tag "blog/admin/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if blog_current_user %>
    <%= render "layouts/blog/admin/nav_bar" %>
  <% end %>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}", class: (name == :notice ? "alert alert-info" : "alert alert-error") %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>