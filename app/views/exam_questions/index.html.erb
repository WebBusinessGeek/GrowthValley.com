<%- model_class = ExamQuestion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% if @exam_questions.present? %>
  <div>
    <h3>Exam Name: <%= @exam_questions.first.exam.title %></h3><br>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:question) %></th>
        <th style="text-align:right"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @exam_questions.each do |exam_question| %>
        <tr>
          <td><%= link_to exam_question.question, course_exam_exam_question_path(@exam.course, @exam, exam_question) %></td>
          <td style="text-align:right">
            <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_course_exam_exam_question_path(@exam.course, @exam, exam_question) %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), course_exam_exam_question_path(@exam.course, @exam, exam_question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, style: 'margin-left: 5px;' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.add_question")), new_course_exam_exam_question_path(@exam.course, @exam), :class=>"btn btn-primary" %>
<%= link_to t('.back', :default => 'Back to courses'), my_courses_courses_path, style: 'margin-left: 5px;', :class=>"btn" %>
