<% content_for(:body_class, 'profile-page') %>
<% content_for(:current, 'my_courses') %>
<% content_for(:title, 'GrowthValley > MY Courses > Courses') %>
<%- model_class = Quiz -%>
<div class="main-content-area wrapper my-courses-table edit_quiz"> 
   <div class="mycourses-all">
  <ul class="breadcrumb">
    <li><a href="javascript:void(0)">Courses</a> <span class="divider"></span></li>
    <li><a href="javascript:void(0)">Quiz</a></li>
</ul>
<%= simple_form_for [@section, @quiz], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.error_notification %>

    <%= f.input :question %>
    <%= f.input :option1 %>
    <%= f.input :option2 %>
    <%= f.input :option3 %>
    <%= f.input :option4 %>
    <%= f.input :correct_answer, collection: [ ['Option 1', 1], ['Option 2', 2], ['Option 3', 3], ['Option 4', 4] ], include_blank: false %>

  <div class="sub-edit control-group">
    <div class="controls">
    <% if @quiz.new_record? %>
      <%= f.button :submit, 'Add this question', :class => 'btn-green' %>
    <% else %>
      <%= f.button :submit, 'Update this question', :class => 'btn-green' %>
    <% end %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), section_quizzes_path(@section), :class => 'btn btn-cancel ' %>
  </div>
</div>
<% end %>
</div>
</div>