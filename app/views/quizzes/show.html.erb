<%- model_class = Quiz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question) %>:</strong></dt>
  <dd><%= @quiz.question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option1) %>:</strong></dt>
  <dd><%= @quiz.option1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option2) %>:</strong></dt>
  <dd><%= @quiz.option2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option3) %>:</strong></dt>
  <dd><%= @quiz.option3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option4) %>:</strong></dt>
  <dd><%= @quiz.option4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:correct_answer) %>:</strong></dt>
  <dd><%= @quiz.correct_answer %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), section_quizzes_path(@quiz.section), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_section_quiz_path(@quiz.section, @quiz), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), section_quiz_path(@quiz.section, @quiz), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>
