<%= render :partial => "layouts/inner_nav", :locals => { :current => "review_exam" } %>

<div class="page-header">
  <h1><%=t '.title', :default => "Exams Pending for Review" %></h1>
</div>

<% if @learners_exams.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Exam Name</th>
        <th>Learner Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% count = 0 %>
      <% @learners_exams.each do |le| %>
        <% count = count + 1 %>
        <% exam ||= le.course.exam %>
        <% exam_learner = le.user %>
        <tr>
          <td><%= "#{exam.title.titleize}" %></td>
          <td><%= exam_learner.full_name.titleize %></td>
          <td>
            <%= link_to 'Review', review_exam_path(exam_id: exam.id, user_id: exam_learner.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>
    No exams pending for review...
  </p>
<% end %>
